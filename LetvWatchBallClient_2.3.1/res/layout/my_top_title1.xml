<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_center_top"
    android:layout_width="fill_parent"
    android:layout_height="53dip"
    android:background="@color/letv_color_fff6f6f6"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="18dp"
        android:src="@drawable/back_selecter" />

    <LinearLayout
        android:id="@+id/setting_center_btn_layout"
        android:layout_width="200dip"
        android:layout_height="29dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/my_top_title1_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recommend_left_select"
            android:gravity="center"
            android:text="@string/more_personal_info"
            android:textColor="@color/main_white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/my_top_title1_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recommend_right_normal"
            android:gravity="center"
            android:text="@string/more_setting_center"
            android:textColor="@color/main_blue"
            android:textSize="13sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        layout="@layout/setting_driver_line" />

</RelativeLayout>