<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <WebView
                android:id="@+id/world_cup_web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="right"
                android:background="@color/webview_title_navibar">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/webview_back"
                    android:src="@drawable/backbtn"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/webview_forward"
                    android:src="@drawable/forwardbtn"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/webview_reload"
                    android:src="@drawable/reloadbtn"
                    />
                </LinearLayout>
        </FrameLayout>
</LinearLayout>