<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_root"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="horizontal" >

    <View
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/letv_color_ffa1a1a1" />

    <View
        android:id="@+id/left"
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/letv_color_ffa1a1a1" />

    <View
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/letv_color_ffa1a1a1" />

    <View
        android:id="@+id/right"
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@color/letv_color_ffa1a1a1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <com.letv.cache.view.LetvImageView
                android:id="@+id/news_items_icon"
                android:layout_width="89dp"
                android:layout_height="67dp"
                android:layout_marginRight="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/news_ic_default" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/videos_list_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="TextView"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <com.letv.cache.view.LetvImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/back_input" />

                <TextView
                    android:id="@+id/news_items_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="TextView"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>