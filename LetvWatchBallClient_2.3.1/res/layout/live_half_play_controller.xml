<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_half_controller"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/live_half_controller_normal"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/letv_color_ff000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/pim_desc_back"
            android:scaleType="fitCenter"
            android:src="@drawable/back_white_selecter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/controller_play"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"
            android:paddingRight="10dip"
            android:scaleType="centerInside"
            android:src="@drawable/play_selecter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/controller_full"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="15dip"
                android:paddingRight="10dip"
                android:scaleType="centerInside"
                android:src="@drawable/full_selecter" />

            <ImageView
                android:id="@+id/controller_book"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="15dip"
                android:paddingRight="10dip"
                android:scaleType="centerInside"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>