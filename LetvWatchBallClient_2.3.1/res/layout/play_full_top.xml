<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="38dip"
    android:background="@drawable/play_controller_top_bg"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:background="@drawable/play_controller_top_bg"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/full_back"
            style="@style/letv_text_11_ffdfdfdf"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingLeft="9dip"
            android:paddingRight="9dip"
            android:scaleType="centerInside"
            android:src="@drawable/back_white_selecter" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/play_pip"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginRight="69dip"
            android:src="@drawable/pip_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/full_net"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/full_battery"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <TextView
                android:id="@+id/full_time"
                style="@style/letv_text_14_ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_marginRight="7dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <com.letv.watchball.view.MarqueeTextView
        android:id="@+id/full_title"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true" />

</FrameLayout>