<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.letv.watchball"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <com.letv.watchball.view.LetvGallery
        android:id="@+id/top_gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:spacing="0dip"
        android:unselectedAlpha="1" />

    <com.letv.watchball.view.CircleGalleryIndicator
        android:id="@+id/top_gallery_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="12dip"
        android:padding="2dip"
        app:activeColor="@color/letv_color_ffffffff"
        app:activeType="fill"
        app:circleSeparation="11dip"
        app:inactiveColor="@color/letv_color_ff969696"
        app:inactiveType="fill"
        app:cradius="2dp" />

</FrameLayout>